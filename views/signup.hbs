                            </div>
                            <div class="pt-3 d-flex justify-content-between">
                                <!-- Confirm Password input -->
                                <div class="form-group ps-2 pe-2
                                    input-group-lg">
                                    <label class="form-label small
                                        text-muted m-0"
                                        for="cfmPasswordBus">Confirm password</label>
                                    <input
                                        type="password"
                                        id="cfmPasswordBus"
                                        name="cfmPasswordBus"
