                                        value="{{#if data.institution}}{{data.institution}}{{/if}}"
                                        class="form-control w-100 border-0 {{#if message.institution}}error-focus{{/if}}"
                                        placeholder="{{#if message.institution}}{{message.institution}}{{else}}XYZ Healthcare{{/if}}"
                                        />
                                        <span class="error-text text-danger">{{#if message.institution}}{{message.institution}}{{/if}}</span>
                                </div>
                                <!-- Institution input -->

                                <!-- Password input -->
                                <div class="form-group ps-2 pe-2
                                    input-group-lg">
                                    <label class="form-label small
                                        text-muted m-0"
                                        for="passwordBus">Password</label>
                                    <input
                                        type="password"
